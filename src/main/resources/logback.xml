<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%boldBlue([DiscordEconomyBridge - Bot]) %boldCyan(%-30.-30thread) %boldGreen(%-15.-15logger{0}) %highlight(%-6level) %msg</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>